        <form method="POST">
            <div>
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'placeholder': 'Mon titre'} }) }}
                {{ form_errors(form.title) }}
            </div>

            <div>
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr': {'placeholder': 'Mon contenu'} }) }}
                {{ form_errors(form.content) }}
            </div>

            {{ form_rest(form) }}

            <input type="submit">
        </form>
